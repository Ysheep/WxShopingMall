.verticalCenter {
  display: -webkit-flex;
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.verticalLeft {
  display: -webkit-flex;
  -webkit-align-items: left;
  align-items: left;
  -webkit-justify-content: left;
  justify-content: left;
}
.spaceBetween {
  display: flex;
  justify-content: space-between;
}

.middleLine {
  height: 1px;
  border: none;
  border-top: 1px solid #d9d9d9;
}

.banner {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 60px;
}

.topLevel {
  z-index: 500;
}

.borderLineTop {
  border-top: 1rpx solid #d9d9d9;
}

.textPanelHead {
  font-size: 15px;
  color: black;
}

.textPanelHeadRed {
  font-size: 15px;
  color: #e33a3c;
}

.textPanelHeadGray {
  font-size: 15px;
  color: gray;
}

